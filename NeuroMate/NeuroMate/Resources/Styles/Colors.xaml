<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-stylesheet type="text/css" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Kolory podstawowe -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4338CA</Color>
    <Color x:Key="PrimaryLight">#8B5CF6</Color>
    
    <Color x:Key="Secondary">#10B981</Color>
    <Color x:Key="SecondaryDark">#059669</Color>
    <Color x:Key="SecondaryLight">#34D399</Color>
    
    <Color x:Key="Tertiary">#8B5CF6</Color>
    <Color x:Key="TertiaryDark">#7C3AED</Color>
    <Color x:Key="TertiaryLight">#A78BFA</Color>
    
    <Color x:Key="Accent">#F59E0B</Color>
    <Color x:Key="AccentDark">#D97706</Color>
    <Color x:Key="AccentLight">#FCD34D</Color>
    
    <!-- Kolory statusów -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>
    
    <!-- Kolory tła -->
    <Color x:Key="PageBackground">#F8FAFC</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="SurfaceBackground">#F1F5F9</Color>
    <Color x:Key="OverlayBackground">#80000000</Color>
    
    <!-- Kolory tekstu -->
    <Color x:Key="TextPrimary">#1E293B</Color>
    <Color x:Key="TextSecondary">#64748B</Color>
    <Color x:Key="TextTertiary">#94A3B8</Color>
    <Color x:Key="TextLight">#FFFFFF</Color>
    <Color x:Key="TextMuted">#9CA3AF</Color>
    
    <!-- Kolory obramowań -->
    <Color x:Key="BorderLight">#E2E8F0</Color>
    <Color x:Key="BorderMedium">#CBD5E1</Color>
    <Color x:Key="BorderDark">#64748B</Color>
    
    <!-- Kolory cieni -->
    <Color x:Key="ShadowLight">#1A000000</Color>
    <Color x:Key="ShadowMedium">#33000000</Color>
    <Color x:Key="ShadowDark">#4D000000</Color>
    
    <!-- Gradienty -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0" />
        <GradientStop Color="{StaticResource PrimaryLight}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Secondary}" Offset="0" />
        <GradientStop Color="{StaticResource SecondaryLight}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="TertiaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Tertiary}" Offset="0" />
        <GradientStop Color="{StaticResource TertiaryLight}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Accent}" Offset="0" />
        <GradientStop Color="{StaticResource AccentLight}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#F8FAFC" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Success}" Offset="0" />
        <GradientStop Color="{StaticResource SecondaryLight}" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>
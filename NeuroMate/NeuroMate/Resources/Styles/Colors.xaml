<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Kolory główne -->
    <Color x:Key="Primary">#2196F3</Color>
    <Color x:Key="PrimaryDark">#1976D2</Color>
    <Color x:Key="PrimaryLight">#BBDEFB</Color>
    <Color x:Key="Secondary">#FF9800</Color>
    <Color x:Key="SecondaryDark">#F57C00</Color>
    <Color x:Key="SecondaryLight">#FFE0B2</Color>

    <!-- Podstawowe kolory -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="MidnightBlue">#191970</Color>
    <Color x:Key="OffBlack">#20222B</Color>
    <Color x:Key="Magenta">#FF00FF</Color>
    
    <!-- Kolory szarości (Material Design) -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#0F0F0F</Color>

    <!-- Kolory tekstu dla motywów -->
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="SecondaryDarkText">#FFFFFF</Color>

    <!-- Kolory tła -->
    <Color x:Key="PageBackground">#F5F5F5</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>

    <!-- Kolory tekstu -->
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextDisabled">#BDBDBD</Color>
    <Color x:Key="OnSurfaceColor">#000000</Color>

    <!-- Kolory stanu -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- Gradient -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2196F3" Offset="0.0" />
        <GradientStop Color="#1976D2" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Cienie -->
    <Shadow x:Key="DefaultShadow"
            Brush="Black"
            Opacity="0.1"
            Radius="8"
            Offset="0,2" />

    <!-- Style dla przycisków -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Padding" Value="16,0" />
        <Setter Property="Shadow" Value="{StaticResource DefaultShadow}" />
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Padding" Value="16,0" />
    </Style>

    <Style x:Key="OutlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Padding" Value="16,0" />
    </Style>

    <!-- Style dla kart -->
    <Style x:Key="CardFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Shadow" Value="{StaticResource DefaultShadow}" />
    </Style>

    <!-- Style dla nagłówków -->
    <Style x:Key="PageTitle" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
    </Style>

    <Style x:Key="SectionTitle" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style x:Key="Subtitle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <!-- Style dla statystyk -->
    <Style x:Key="StatLabel" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style x:Key="StatDescription" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <!-- Animacje -->
    <x:Double x:Key="AnimationDuration">250</x:Double>
    <!-- Usuwam problematyczne definicje Easing - będą używane bezpośrednio w kodzie -->

</ResourceDictionary>
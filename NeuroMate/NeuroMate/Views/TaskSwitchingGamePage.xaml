<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="NeuroMate.Views.TaskSwitchingGamePage"
             Title="Gra Kasjer"
             BackgroundColor="{StaticResource PageBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header z awatarem i timerem -->
        <Frame Grid.Row="0" Style="{StaticResource ElevatedCard}" Margin="20,40,20,20">
            <Grid ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Awatar -->
                <Frame Grid.Column="0" Style="{StaticResource AvatarFrame}">
                    <skia:SKLottieView x:Name="CashierAvatarLottie"
                                       Source="turtle.json"
                                       RepeatCount="-1"
                                       IsAnimationEnabled="True"
                                       WidthRequest="56"
                                       HeightRequest="56" />
                </Frame>

                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                    <Label Text="💰 Gra Kasjer" Style="{StaticResource HeadlineLabel}" />
                    <Label x:Name="InstructionLabel"
                           Text="Wydaj resztę używając najmniejszej liczby monet"
                           Style="{StaticResource SubtitleLabel}" />
                </StackLayout>

                <!-- Timer -->
                <Frame Grid.Column="2" 
                       Background="{StaticResource SecondaryGradient}"
                       CornerRadius="20"
                       Padding="16,12"
                       HasShadow="True">
                    <Label x:Name="TimerLabel" 
                           Text="60s"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Frame>
            </Grid>
        </Frame>

        <!-- Główna zawartość gry -->
        <ScrollView Grid.Row="1" Padding="20,0">
            <StackLayout Spacing="24">
                
                <!-- Kwota do wydania -->
                <Frame Style="{StaticResource ElevatedCard}">
                    <StackLayout Spacing="12">
                        <Label Text="💸 Wydaj resztę:" Style="{StaticResource SubtitleLabel}" HorizontalOptions="Center" />
                        <Label x:Name="TargetAmountLabel" 
                               Text="2,47 zł"
                               Style="{StaticResource HeadlineLabel}"
                               FontSize="36"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Primary}" />
                    </StackLayout>
                </Frame>

                <!-- Wybrane monety -->
                <Frame Style="{StaticResource CardFrame}">
                    <StackLayout Spacing="12">
                        <Label Text="🎯 Twój wybór:" Style="{StaticResource SubtitleLabel}" HorizontalOptions="Center" />
                        <Label x:Name="SelectedCoinsLabel" 
                               Text="Wybierz monety..."
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextSecondary}" />
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="8">
                            <Label Text="Liczba monet:" Style="{StaticResource BodyLabel}" />
                            <Label x:Name="CoinsCountLabel" 
                                   Text="0"
                                   Style="{StaticResource BodyLabel}"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Accent}" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Dostępne monety -->
                <Frame Style="{StaticResource CardFrame}">
                    <StackLayout Spacing="16">
                        <Label Text="🪙 Dostępne monety:" Style="{StaticResource SubtitleLabel}" HorizontalOptions="Center" />
                        
                        <!-- Monety większe -->
                        <Grid ColumnSpacing="12" RowSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Pierwsze rzęd - duże nominały -->
                            <Button Grid.Row="0" Grid.Column="0"
                                    x:Name="Coin200Button"
                                    Text="2zł"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#FFD700"
                                    TextColor="Black"
                                    Clicked="OnCoinSelected" />

                            <Button Grid.Row="0" Grid.Column="1"
                                    x:Name="Coin100Button"
                                    Text="1zł"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#C0C0C0"
                                    TextColor="Black"
                                    Clicked="OnCoinSelected" />

                            <Button Grid.Row="0" Grid.Column="2"
                                    x:Name="Coin50Button"
                                    Text="50gr"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#CD7F32"
                                    TextColor="White"
                                    Clicked="OnCoinSelected" />

                            <!-- Drugi rząd - średnie nominały -->
                            <Button Grid.Row="1" Grid.Column="0"
                                    x:Name="Coin20Button"
                                    Text="20gr"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#B8860B"
                                    TextColor="White"
                                    Clicked="OnCoinSelected" />

                            <Button Grid.Row="1" Grid.Column="1"
                                    x:Name="Coin10Button"
                                    Text="10gr"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#A0522D"
                                    TextColor="White"
                                    Clicked="OnCoinSelected" />

                            <Button Grid.Row="1" Grid.Column="2"
                                    x:Name="Coin5Button"
                                    Text="5gr"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#8B4513"
                                    TextColor="White"
                                    Clicked="OnCoinSelected" />

                            <!-- Trzeci rząd - małe nominały -->
                            <Button Grid.Row="2" Grid.Column="0"
                                    x:Name="Coin2Button"
                                    Text="2gr"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#D2691E"
                                    TextColor="White"
                                    Clicked="OnCoinSelected" />

                            <Button Grid.Row="2" Grid.Column="1"
                                    x:Name="Coin1Button"
                                    Text="1gr"
                                    Style="{StaticResource PrimaryButton}"
                                    FontSize="16"
                                    HeightRequest="60"
                                    BackgroundColor="#A0522D"
                                    TextColor="White"
                                    Clicked="OnCoinSelected" />

                            <Button Grid.Row="2" Grid.Column="2"
                                    x:Name="ClearButton"
                                    Text="🗑️ Wyczyść"
                                    Style="{StaticResource OutlineButton}"
                                    FontSize="14"
                                    HeightRequest="60"
                                    Clicked="OnClearSelection" />
                        </Grid>
                    </StackLayout>
                </Frame>

                <!-- Przycisk sprawdzenia -->
                <Button x:Name="CheckAnswerButton"
                        Text="✅ Sprawdź odpowiedź"
                        Style="{StaticResource AccentButton}"
                        FontSize="18"
                        HeightRequest="60"
                        Clicked="OnCheckAnswer"
                        IsEnabled="False" />

                <!-- Statystyki -->
                <Frame Style="{StaticResource CardFrame}">
                    <Grid ColumnSpacing="20" RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.ColumnSpan="3" 
                               Text="📊 Statystyki" 
                               Style="{StaticResource HeadlineLabel}" 
                               HorizontalOptions="Center" />

                        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="4">
                            <Label Text="Zadania" Style="{StaticResource StatDescription}" />
                            <Label x:Name="ProgressLabel" Text="0/15" Style="{StaticResource StatLabel}" />
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="4">
                            <Label Text="Poprawne" Style="{StaticResource StatDescription}" />
                            <Label x:Name="ScoreLabel" Text="0" Style="{StaticResource StatLabel}" />
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="2" Spacing="4">
                            <Label Text="Śr. monet" Style="{StaticResource StatDescription}" />
                            <Label x:Name="AvgCoinsLabel" Text="0" Style="{StaticResource StatLabel}" />
                        </StackLayout>
                    </Grid>
                </Frame>

            </StackLayout>
        </ScrollView>

        <!-- Kontrolki gry -->
        <Frame Grid.Row="2" Style="{StaticResource CardFrame}" Margin="20,10,20,30">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="PauseButton"
                        Text="⏸️ Pauza"
                        Style="{StaticResource OutlineButton}"
                        Clicked="OnPauseClicked"
                        IsVisible="False" />

                <Button Grid.Column="1"
                        x:Name="StartStopButton"
                        Text="🚀 Start"
                        Style="{StaticResource PrimaryButton}"
                        Clicked="OnStartStopClicked" />

                <Button Grid.Column="2"
                        Text="❌ Wyjdź"
                        Style="{StaticResource OutlineButton}"
                        Clicked="OnExitClicked" />
            </Grid>
        </Frame>

    </Grid>
</ContentPage>

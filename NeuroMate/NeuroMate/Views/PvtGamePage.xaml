<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="NeuroMate.Views.PvtGamePage"
             Title="Test Reakcji (PVT)"
             BackgroundColor="{StaticResource PageBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header z awatarem i timerem -->
        <Frame Grid.Row="0" Style="{StaticResource ElevatedCard}" Margin="20,40,20,20">
            <Grid ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Awatar -->
                <Frame Grid.Column="0" Style="{StaticResource AvatarFrame}">
                    <skia:SKLottieView x:Name="PvtAvatarLottie"
                                       Source="turtle.json"
                                       RepeatCount="-1"
                                       IsAnimationEnabled="True"
                                       WidthRequest="56"
                                       HeightRequest="56" />
                </Frame>

                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                    <Label Text="⚡ Test Reakcji (PVT)" Style="{StaticResource HeadlineLabel}" />
                    <Label x:Name="InstructionLabel"
                           Text="Kliknij jak najszybciej gdy pojawi się czerwone światło!"
                           Style="{StaticResource SubtitleLabel}" />
                </StackLayout>

                <!-- Timer -->
                <Frame Grid.Column="2" 
                       Background="{StaticResource AccentGradient}"
                       CornerRadius="20"
                       Padding="16,12"
                       HasShadow="True">
                    <Label x:Name="TimerLabel" 
                           Text="180s"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Frame>
            </Grid>
        </Frame>

        <!-- Główna zawartość gry -->
        <ScrollView Grid.Row="1" Padding="20,0">
            <StackLayout Spacing="24">

                <!-- Główny obszar testu -->
                <Frame Style="{StaticResource ElevatedCard}" 
                       HeightRequest="300"
                       x:Name="TestArea"
                       BackgroundColor="{StaticResource Gray100}">
                    <Grid>
                        <!-- Komunikat oczekiwania -->
                        <StackLayout x:Name="WaitingState" 
                                     IsVisible="True"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="20">
                            <Label Text="⏳" FontSize="48" HorizontalOptions="Center" />
                            <Label Text="Przygotuj się..." 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource TextSecondary}" />
                        </StackLayout>

                        <!-- Czerwone światło -->
                        <StackLayout x:Name="RedLightState" 
                                     IsVisible="False"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="20">
                            <Ellipse Fill="{StaticResource Error}" 
                                     WidthRequest="120" 
                                     HeightRequest="120" />
                            <Label Text="KLIKNIJ TERAZ!" 
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Error}" />
                        </StackLayout>

                        <!-- Potwierdzenie kliknięcia -->
                        <StackLayout x:Name="ConfirmationState" 
                                     IsVisible="False"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="20">
                            <Label Text="✅" FontSize="48" HorizontalOptions="Center" />
                            <Label x:Name="ReactionTimeLabel" 
                                   Text="325ms" 
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Success}" />
                        </StackLayout>

                        <!-- Przycisk reakcji (niewidoczny) -->
                        <Button x:Name="ReactionButton"
                                BackgroundColor="Transparent"
                                BorderColor="Transparent"
                                Text=""
                                Clicked="OnReactionButtonClicked" />
                    </Grid>
                </Frame>

                <!-- Instrukcje -->
                <Frame Style="{StaticResource CardFrame}">
                    <StackLayout Spacing="8">
                        <Label Text="📋 Jak grać:" Style="{StaticResource HeadlineLabel}" HorizontalOptions="Center" />
                        <Label Text="1. Czekaj na czerwone światło" Style="{StaticResource BodyLabel}" />
                        <Label Text="2. Kliknij w ekran jak najszybciej" Style="{StaticResource BodyLabel}" />
                        <Label Text="3. Test powtarza się przez 3 minuty" Style="{StaticResource BodyLabel}" />
                        <Label Text="⚠️ Nie klikaj za wcześnie!" 
                               Style="{StaticResource BodyLabel}" 
                               TextColor="{StaticResource Warning}"
                               HorizontalTextAlignment="Center" />
                    </StackLayout>
                </Frame>

                <!-- Statystyki na żywo -->
                <Frame Style="{StaticResource CardFrame}">
                    <Grid ColumnSpacing="20" RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.ColumnSpan="3" 
                               Text="📊 Statystyki" 
                               Style="{StaticResource HeadlineLabel}" 
                               HorizontalOptions="Center" />

                        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="4">
                            <Label Text="Próby" Style="{StaticResource StatDescription}" />
                            <Label x:Name="TrialsLabel" Text="0/20" Style="{StaticResource StatLabel}" />
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="4">
                            <Label Text="Średni RT" Style="{StaticResource StatDescription}" />
                            <Label x:Name="AvgRTLabel" Text="0ms" Style="{StaticResource StatLabel}" />
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="2" Spacing="4">
                            <Label Text="Najszybszy" Style="{StaticResource StatDescription}" />
                            <Label x:Name="FastestRTLabel" Text="0ms" Style="{StaticResource StatLabel}" />
                        </StackLayout>
                    </Grid>
                </Frame>

            </StackLayout>
        </ScrollView>

        <!-- Kontrolki gry -->
        <Frame Grid.Row="2" Style="{StaticResource CardFrame}" Margin="20,10,20,30">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="PauseButton"
                        Text="⏸️ Pauza"
                        Style="{StaticResource OutlineButton}"
                        Clicked="OnPauseClicked"
                        IsVisible="False" />

                <Button Grid.Column="1"
                        x:Name="StartStopButton"
                        Text="🚀 Start"
                        Style="{StaticResource PrimaryButton}"
                        Clicked="OnStartStopClicked" />

                <Button Grid.Column="2"
                        Text="❌ Wyjdź"
                        Style="{StaticResource OutlineButton}"
                        Clicked="OnExitClicked" />
            </Grid>
        </Frame>

    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="NeuroMate.Views.NBackGamePage"
             Title="N-back - Pamięć Robocza"
             BackgroundColor="{StaticResource PageBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header z awatarem i timerem -->
        <Frame Grid.Row="0" Style="{StaticResource ElevatedCard}" Margin="20,40,20,20">
            <Grid ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Awatar -->
                <Frame Grid.Column="0" Style="{StaticResource AvatarFrame}">
                    <skia:SKLottieView x:Name="NBackAvatarLottie"
                                       Source="turtle.json"
                                       RepeatCount="-1"
                                       IsAnimationEnabled="True"
                                       WidthRequest="56"
                                       HeightRequest="56" />
                </Frame>

                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                    <Label Text="🔢 N-back Test" Style="{StaticResource HeadlineLabel}" />
                    <Label x:Name="InstructionLabel"
                           Text="Kliknij gdy pozycja powtarza się sprzed N kroków"
                           Style="{StaticResource SubtitleLabel}" />
                </StackLayout>

                <!-- Timer -->
                <Frame Grid.Column="2" 
                       Background="{StaticResource AccentGradient}"
                       CornerRadius="20"
                       Padding="16,12"
                       HasShadow="True">
                    <Label x:Name="TimerLabel" 
                           Text="120s"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Frame>
            </Grid>
        </Frame>

        <!-- Główna zawartość gry -->
        <ScrollView Grid.Row="1" Padding="20,0">
            <StackLayout Spacing="24">

                <!-- Poziom trudności -->
                <Frame Style="{StaticResource CardFrame}">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                x:Name="OneBackBtn"
                                Text="1-back"
                                Style="{StaticResource PrimaryButton}"
                                Clicked="OnLevelSelected" />

                        <Label Grid.Column="1"
                               Text="vs"
                               FontSize="16"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextSecondary}" />

                        <Button Grid.Column="2"
                                x:Name="TwoBackBtn"
                                Text="2-back"
                                Style="{StaticResource OutlineButton}"
                                Clicked="OnLevelSelected" />
                    </Grid>
                </Frame>

                <!-- Plansza gry -->
                <Frame Style="{StaticResource ElevatedCard}" 
                       HeightRequest="280"
                       BackgroundColor="{StaticResource SurfaceVariant}">
                    <Grid x:Name="GameBoard" RowSpacing="8" ColumnSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- 9 pozycji na planszy -->
                        <Frame Grid.Row="0" Grid.Column="0" x:Name="Pos00" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="0" Grid.Column="1" x:Name="Pos01" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="0" Grid.Column="2" x:Name="Pos02" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="1" Grid.Column="0" x:Name="Pos10" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="1" Grid.Column="1" x:Name="Pos11" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="1" Grid.Column="2" x:Name="Pos12" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="2" Grid.Column="0" x:Name="Pos20" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="2" Grid.Column="1" x:Name="Pos21" Style="{StaticResource GamePositionFrame}" />
                        <Frame Grid.Row="2" Grid.Column="2" x:Name="Pos22" Style="{StaticResource GamePositionFrame}" />

                        <!-- Aktualny bodziec -->
                        <Frame x:Name="CurrentStimulus" 
                               Grid.Row="1" Grid.Column="1"
                               BackgroundColor="{StaticResource Primary}"
                               CornerRadius="25"
                               IsVisible="False"
                               Padding="0">
                            <Label Text="●" 
                                   FontSize="36"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                    </Grid>
                </Frame>

                <!-- Przyciski odpowiedzi -->
                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            x:Name="MatchButton"
                            Text="✅ MATCH"
                            Style="{StaticResource PrimaryButton}"
                            FontSize="18"
                            HeightRequest="60"
                            Clicked="OnMatchClicked" />

                    <Button Grid.Column="1"
                            x:Name="NoMatchButton"
                            Text="❌ NO MATCH"
                            Style="{StaticResource SecondaryButton}"
                            FontSize="18"
                            HeightRequest="60"
                            Clicked="OnNoMatchClicked" />
                </Grid>

                <!-- Statystyki gry -->
                <Frame Style="{StaticResource CardFrame}">
                    <Grid ColumnSpacing="20" RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.ColumnSpan="3" 
                               Text="📊 Statystyki" 
                               Style="{StaticResource HeadlineLabel}" 
                               HorizontalOptions="Center" />

                        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="4">
                            <Label Text="Próby" Style="{StaticResource StatDescription}" />
                            <Label x:Name="TrialsLabel" Text="0/30" Style="{StaticResource StatLabel}" />
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="1" Spacing="4">
                            <Label Text="Trafienia" Style="{StaticResource StatDescription}" />
                            <Label x:Name="AccuracyLabel" Text="0%" Style="{StaticResource StatLabel}" />
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="2" Spacing="4">
                            <Label Text="Poziom" Style="{StaticResource StatDescription}" />
                            <Label x:Name="LevelLabel" Text="1-back" Style="{StaticResource StatLabel}" />
                        </StackLayout>
                    </Grid>
                </Frame>

            </StackLayout>
        </ScrollView>

        <!-- Kontrolki gry -->
        <Frame Grid.Row="2" Style="{StaticResource CardFrame}" Margin="20,10,20,30">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="PauseButton"
                        Text="⏸️ Pauza"
                        Style="{StaticResource OutlineButton}"
                        Clicked="OnPauseClicked"
                        IsVisible="False" />

                <Button Grid.Column="1"
                        x:Name="StartStopButton"
                        Text="🚀 Start"
                        Style="{StaticResource PrimaryButton}"
                        Clicked="OnStartStopClicked" />

                <Button Grid.Column="2"
                        Text="❌ Wyjdź"
                        Style="{StaticResource OutlineButton}"
                        Clicked="OnExitClicked" />
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
